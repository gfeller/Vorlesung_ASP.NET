@page
@{
    ViewData["Title"] = "AjaxFetch";
}


<form asp-page="Ajax" asp-page-handler="TodoList" data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#output">
    <input type="submit" value="Reload" />
</form>

<div id="output">
    <vc:to-do-list></vc:to-do-list>
</div>

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/jquery-ajax-unobtrusive@3.2.6/dist/jquery.unobtrusive-ajax.min.js"
            integrity="sha256-PAC000yuHt78nszJ2RO0OiDMu/uLzPLRlYTk8J3AO10="
            crossorigin="anonymous"></script>
}